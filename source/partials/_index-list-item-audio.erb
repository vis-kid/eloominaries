<article class="index-article">
  <span class='post-date'><%= article.date.strftime('%b %d | %Y') %></span><h2 class='post-title'><%= link_to article.title, article %></h2>

  <% if article.data.topic_list %>
    <h3 class='topic-list'><%= article.data.topic_list %></h3>
  <% end %>

  <% if article.data.soundcloud_id %>
    <div class='soundcloud-player-small'>  
        <iframe width="100%"
          height="166" 
          scrolling="no" 
          frameborder="no" 
          src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= article.data.soundcloud_id %>&amp;color=FC0D1B&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=true&amp;show_reposts=false"></iframe>
    </div>
   <% end %>
</article>
